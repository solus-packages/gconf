<?xml version="1.0" ?>
<!DOCTYPE PISI SYSTEM "https://solus-project.com/standard/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>gconf</Name>
        <Homepage>http://projects.gnome.org/gconf/</Homepage>
        <Packager>
            <Name>Ikey Doherty</Name>
            <Email>ikey@solus-project.com</Email>
        </Packager>
        <Summary>GNOME Configuration Database</Summary>
        <Description>The GConf package contains a configuration database system used by many GNOME applications.</Description>
        <License>LGPL-2.0</License>
        <Archive sha1sum="a90d3ac08dc454f927c8d3024f52d4d57e3ff613" type="tarxz">http://ftp.gnome.org/pub/gnome/sources/GConf/3.2/GConf-3.2.6.tar.xz</Archive>

        <BuildDependencies>
            <Dependency type="pkgconfig32">gio-2.0</Dependency>
            <Dependency type="pkgconfig32">dbus-1</Dependency>
            <Dependency type="pkgconfig32">dbus-glib-1</Dependency>
            <Dependency type="pkgconfig32">libxml-2.0</Dependency>
            <Dependency>glibc-32bit-devel</Dependency>
            <Dependency>libgcc-32bit</Dependency>
            <Dependency>dbus-32bit</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>gconf</Name>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="data">/etc/dbus-1</Path>
            <Path fileType="config">/etc/gconf</Path>
            <Path fileType="data">/etc/xdg</Path>
            <Path fileType="library">/usr/lib64/GConf</Path>
            <Path fileType="library">/usr/lib64/lib*.so.*</Path>
            <Path fileType="library">/usr/lib64/gio/modules</Path>
            <Path fileType="data">/usr/share/dbus-1</Path>
            <Path fileType="data">/usr/share/gir-1.0</Path>
            <Path fileType="localedata">/usr/share/locale</Path>
            <Path fileType="man">/usr/share/man</Path>
            <Path fileType="data">/usr/share/sgml</Path>
            <Path fileType="data">/usr/share/polkit-1</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="data">/usr/lib64/girepository-1.0</Path>
        </Files>
        <Provides>
            <COMAR script="packageHandler.py">System.PackageHandler</COMAR>
        </Provides>
    </Package>

    <Package>
        <Name>gconf-32bit</Name>
        <BuildType>emul32</BuildType>
        <PartOf>emul32</PartOf>
        <Files>
            <Path fileType="library">/usr/lib32/lib*.so.*</Path>
            <Path fileType="library">/usr/lib32/GConf</Path>
            <Path fileType="library">/usr/lib32/gio/modules</Path>
            <Path fileType="data">/usr/lib32/girepository-1.0</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">gconf</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>gconf-devel</Name>
        <Summary>Development files for GConf</Summary>
        <Description>Development files for GConf</Description>
        <Files>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="lib">/usr/lib64/lib*.so</Path>
            <Path fileType="data">/usr/lib64/pkgconfig</Path>
            <Path fileType="data">/usr/share/aclocal</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">gconf</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>gconf-32bit-devel</Name>
        <BuildType>emul32</BuildType>
        <PartOf>programming.library</PartOf>
        <Summary>32bit Development files for GConf</Summary>
        <Description>32bit Development files for GConf</Description>
        <Files>
            <Path fileType="lib">/usr/lib32/lib*.so</Path>
            <Path fileType="data">/usr/lib32/pkgconfig</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">gconf-32bit</Dependency>
            <Dependency release="current">gconf-devel</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>gconf-docs</Name>
        <Summary>Documentation for GConf</Summary>
        <Description>Documentation for GConf</Description>
        <Files>
            <Path fileType="doc">/usr/share/gtk-doc</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">gconf-devel</Dependency>
        </RuntimeDependencies>
    </Package>

